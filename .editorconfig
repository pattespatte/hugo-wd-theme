# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{html,css,js,json}]
indent_size = 4

[*.{yaml,toml}]
indent_style = space
indent_size = 2
